{% extends '::base.html.twig' %}

{% block title %}{{ 'head.title'|trans }}{% endblock %}

{% block meta %}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="index,follow">

    <!-- Alternate lang -->
    <link rel="alternate" href="http://www.jira2scrumboard.com.com/" hreflang="en" />
    <link rel="alternate" href="http://www.jira2scrumboard.com.com/fr/" hreflang="fr" />
    <link rel="alternate" href="http://www.jira2scrumboard.com.com/zh/" hreflang="zh" />
    <link rel="alternate" href="http://www.jira2scrumboard.com.com/nl/" hreflang="nl" />

    <meta name="description" content="{{ 'meta.description'|trans }}">
    <meta name="keywords" content="{{ 'meta.keywords'|trans }}">
{% endblock %}



{# CSS #}
{% block stylesheets_top %}
    {% stylesheets
        'bundles/agilestoryprintjira/fonts/font-awesome/css/font-awesome.min.css' 
        'bundles/agilestoryprintjira/css/bootstrap.min.css' 
        'bundles/agilestoryprintjira/css/main.css'
        'bundles/agilestoryprintjira/css/flags.css'
        filter='cssrewrite,yui_css' 
        output='css/theme.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block stylesheets_bottom %}
    <link href="http://fonts.googleapis.com/css?family=Raleway:400,700" rel="stylesheet" type="text/css">
    <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:100,300,400,700,400italic,700italic' rel='stylesheet' type='text/css'>
{% endblock %}



{# Javascript #}
{% block javascripts_top %}
	<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
{% endblock %}

{% block javascripts_bottom %}
    {% javascripts 
        'bundles/agilestoryprintjira/js/jquery.js' 
        'bundles/agilestoryprintjira/js/bootstrap.min.js'
        'bundles/agilestoryprintjira/js/jquery.easing.min.js'
        'bundles/agilestoryprintjira/js/bootstrap-filestyle.min.js'
        'bundles/agilestoryprintjira/js/classie.js' 
        'bundles/agilestoryprintjira/js/cbpAnimatedHeader.js' 
        'bundles/agilestoryprintjira/js/main.js' 

        filter='yui_js'
        output='js/compile.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% include 'AgileStoryPrintJiraBundle:JS:GoogleTagManager.html.twig' %}
    {% include 'AgileStoryPrintJiraBundle:JS:GoogleAnalytics.html.twig' %}
{% endblock %}


{# Body #}
{% block body %}
	{% block content %}{% endblock %}
	{% include 'AgileStoryPrintJiraBundle::footer.html.twig' %}
{% endblock %}
